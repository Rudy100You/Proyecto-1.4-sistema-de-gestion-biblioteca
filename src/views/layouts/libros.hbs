                            <label for="autor">Autor</label>
                            <input type="text" id="nombre" name="nombre" placeholder="Nombre" class="form-control" value="{{#if datos}}{{{datos.nombre}}}{{/if}}">
                            <input type="text" id="apellido" name="apellido" placeholder="Apellido" class="form-control">
                        </div>
                        <div class="form-row p-2">
                            <label for="editorial">Editorial</label>
                            <input type="text" id="editorial" name="editorial" placeholder="Editorial" class="form-control" value="{{#if datos}}{{{datos.editorial}}}{{/if}}">
                        </div>
                        <div class="form-row p-2">
                            <label for="disponible">Disponibilidad</label>
                        <select class="custom-select mr-sm-2" id="disponible" name="disponible">
                            <option {{#if datos}}{{selected0 datos}}{{/if}}>No seleccionar</option>
                            <option value="1"{{#if datos}}{{selected0 datos}}{{/if}}>Disponible</option>
                            <option value="0"{{#if datos}}{{selected0 datos}}{{/if}}>Prestado</option>
                        </select>
                        </div>
                        <div class="form-row p-4">
                            <button class="btn btn-success btn-block">Buscar</button>
                        </div>
                    </form>
                    <script>
                        function reset(){
                            document.getElementById('codlibro').value = '';
                            document.getElementById('isbn').value = '';
                            document.getElementById('titulo').value = '';
                            document.getElementById('nombre').value = '';
                            document.getElementById('apelido').value = '';
                            document.getElementById('editorial').value = '';
                            document.getElementById('disponible').value = 'No Selecionar';
