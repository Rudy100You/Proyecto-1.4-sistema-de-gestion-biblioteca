                            <input type="text" id="codlibro" name="codlibro" placeholder="Código interno" class="form-control" value="{{#if datos}}{{{datos.codlibro}}}{{/if}}">
                        </div>
                        <div class="form-row p-2">
                            <label for="isbn">ISBN</label>
                            <input type="text" id="isbn" name="isbn" placeholder="ISBN" class="form-control" value="{{#if datos}}{{{datos.isbn}}}{{/if}}">
