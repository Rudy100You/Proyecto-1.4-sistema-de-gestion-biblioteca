<div class="container p-4 allign-middle">
    <div class="row">
        <div class="col-lg-5 mx-auto text-center">
             {{#if needsLogin}}
                        <div class="alert alert-info" role="alert">
                            {{needsLogin}}
                        </div>
                {{/if}}
            <div class="card text-center">
               
                <div class="card-header">
                    <h3>Bienvenido/a</h3>
                </div>
                <div class="card-body">
                    {{#if IsAuth}}
                        <div class="alert alert-danger" role="alert">
                            {{IsAuth}}
                        </div>
                        
                    {{/if}}

                    <form action="./login" method="POST" onsubmit="document.URL = '/''">
                        <div class="form-row p-2 needs-validation" novalidate>
                            <label for="username">Usuario</label>
                            <select class="custom-select" name="username">
                                <option selected>Seleccionar...</option>
                                <option value="admin">Admin</option>
                                <!--<option value="guest">Guest</option>-->
                            </select>
                        </div>
                        <div class="form-row p-2">
                            <label for="password">Contraseña</label>
                            <input type="password" name="password" placeholder="Contraseña" class="form-control">
                        </div>
                        <div class="form-row p-4">
                            <button class="btn btn-success btn-block">Ingresar</button>
                        </div>
                    </form>
            </div>
        </div>
    </div>
</div>
</div>